# ==========================================
# SOCIAL MEDIA POSTER - ENVIRONMENT VARIABLES
# ==========================================
# Bestandslocatie: /home/claude/social_media_poster_backend/.env.example
#
# BELANGRIJK: Kopieer dit bestand naar .env en vul je eigen waarden in
# Command: cp .env.example .env
# ==========================================

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL=postgresql://postgres:jouw_wachtwoord@localhost:5432/social_media_poster

# Alternative format (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=social_media_poster
DB_USER=postgres
DB_PASSWORD=jouw_wachtwoord

# ==========================================
# APPLICATION SETTINGS
# ==========================================
APP_NAME=Social Media Poster
APP_VERSION=1.0.0
API_V1_PREFIX=/api/v1
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000

# ==========================================
# SECURITY
# ==========================================
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==========================================
# GOOGLE DRIVE API
# ==========================================
GOOGLE_DRIVE_CREDENTIALS_FILE=credentials.json
GOOGLE_DRIVE_TOKEN_FILE=token.json
GOOGLE_DRIVE_ROOT_FOLDER_ID=your-root-folder-id

# ==========================================
# GOOGLE SHEETS API
# ==========================================
GOOGLE_SHEETS_SPREADSHEET_ID=your-spreadsheet-id
GOOGLE_SHEETS_WORKSHEET_NAME=Customers

# ==========================================
# FACEBOOK API (voor later)
# ==========================================
FACEBOOK_APP_ID=your-app-id
FACEBOOK_APP_SECRET=your-app-secret

# ==========================================
# CORS SETTINGS
# ==========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ==========================================
# DEVELOPMENT
# ==========================================
LOG_LEVEL=INFO
